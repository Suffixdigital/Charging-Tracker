<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialButtonStyle">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="backgroundTint">@color/blue_3970FF</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="TextInputLayout.FilledBox.Padding" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/steel_blue_0B569A</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/steel_blue_0B569A</item>
    </style>

    <style name="TextInputLayout_Error" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/coral_DC2828</item>
    </style>

    <style name="TextInputLayout_Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22%</item>
    </style>


    <style name="Login_TextInputEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:drawablePadding">@dimen/_3sdp</item>
        <item name="android:textColor">@color/dark_gray_262626</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextInputLayout.FilledBox.Padding_dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/steel_blue_0B569A</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/steel_blue_0B569A</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/steel_blue_0B569A</item>
        <item name="endIconDrawable">@drawable/arrow_drop_down</item>

    </style>


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined_dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/steel_blue_0B569A</item>
        //Activated color
        <item name="colorOnSurface">@color/white_FFFFFF</item>
        //Normal color
        <item name="colorError">@color/coral_DC2828</item>
        //Error color
        <item name="colorSurface">@color/white_FFFFFF</item>

    </style>

    <style name="MaterialCardView_Top_Corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_40sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_40sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:padding">1dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="app_terms_condition_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
</resources>