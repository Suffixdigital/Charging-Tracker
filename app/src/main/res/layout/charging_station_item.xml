<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:shadowColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            app:strokeColor="@color/black_000000"
            app:strokeWidth="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_station_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center|start"
                        android:text="ARAI-CoEZET"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/iv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/open" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_station_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center|start"
                    android:text="Bharat Mandapam, Delhi"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_12ssp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_available_chargers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center|start"

                    android:text="Available Chargers: 3/5"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_map" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center|start"
                        android:text=" 4.2 km"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:background="@drawable/icon_clock" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center|start"
                        android:text=" 24/7"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:background="@drawable/icon_charging_station" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center|start"
                        android:text=" CCS"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:background="@drawable/icon_rupees_currency" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:gravity="center|start"
                        android:text=" ₹4/kw"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_regular_charging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-6dp"
                        android:buttonTint="@color/green_3EC94A"
                        android:checked="true"
                        android:fontFamily="@font/inter_regular"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Regular Charging (22 kw)"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_8ssp" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_fast_charging"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/green_3EC94A"
                        android:checked="false"

                        android:fontFamily="@font/inter_regular"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Fast Charging (50 kw)"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_8ssp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_000000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8ssp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center|start"
                    android:text="Amenities : Cafe, Restrooms, Wi-Fi, Nearby Parking"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_8ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btn_payment_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:outlineAmbientShadowColor="@color/black_000000"
                        android:shadowColor="@android:color/transparent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:strokeColor="@color/blue_3970FF"
                        app:strokeWidth="@dimen/_1sdp"
                        tools:targetApi="28">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:text="Charger A"
                                android:textColor="@color/black_000000"
                                android:textSize="@dimen/_12ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:text="₹600.00/10min"
                                android:textColor="@color/black_000000"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_circular"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="invisible"
                        app:indicatorColor="@color/blue_3970FF"
                        app:indicatorDirectionCircular="clockwise"
                        app:indicatorSize="@dimen/_25sdp"
                        app:trackColor="@android:color/transparent"
                        app:trackThickness="@dimen/_3sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_book_slot"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_background"
                        android:fontFamily="@font/inter_semi_bold"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="Book Your Slot"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</layout>